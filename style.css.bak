}

footer > h2 {
	margin-top: 0px;
	margin-bottom: -10px;
}

#sticker {
	display: flex;
}

#coming_soon  {
	width: 80px;
	height: 80px;
	margin-left: -65px;
	margin-top: 20px;
}

.mid-img {
	width: 280px;
	height: 300px;
	border-radius: 6px;
	border: solid 1px black;
	margin: 5px 8.1px -8px 10px;
}

#contact {
	background-image: inherit;
}

#contact a img{
	width: 30px;
	margin-top: 5px;
	padding; 5px;
}

#email_bar > button {
	background-color: green;
	color: white;
	width: 150px;
	height: 35px;
	border-radius: 25px;
	padding: 2px;
	font-weight: bold;
	letter-spacing: 1px;
	font-size: 15px;
	text-align: center;
}

#email_bar > input {
	width: 450px;
	height: 30px;
	border-radius: 25px;
	padding: 5px;
	border: none;
	margin: 1px;
	background-color: lightgreen;
}

#email_bar > button:hover {
	color: black;
}

#email_bar > button:active {
	color: white;
	background-image: linear-gradient(75deg, blue, purple, yellow, green);
	opacity: 0.6;
}

#email_bar > input:hover {
	background-color: white;
}

#email_bar > input:active {
	font-weight: bold;
	color: white;
}

@media screen and (max-width: 700px) {
	.top-img {
		width: 99%;
		height: 150px;
	}
	icon {
		float: left;
		width: 98%;
		height: auto;
	}
	#icons {
		width: 2%;
		height: 2%;
	}
	#icons img {
		width: 50px;
		height: auto;
	}
	#skills {
		margin-top: auto;
		text-align: center;
		margin-left: -3px;
	}
	.container p {
		margin-left: 10px;
		text-align: left;
		font-size: 14px;
	}
	#projects {
		margin-top: 410px;
	}
	#projectImagesStyle {
		display: flex;
		flex: flex-wrap;
	}
	.mid-img {
		width: 88%;
		margin-left: auto;
		margin-bottom:  5px;
	}
	footer {
		margin-top: 7px;
	}
	ul {
		justify-content: space evenly;
		item-align: center;
		padding: 1px;
	}
	ul > li {
		flex: 1;
		font-size: 11px;
